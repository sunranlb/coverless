{
    "name": "Coverless",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "Remove any cover that block your work automatically.",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.csdn.net/*",
                "https://*.jb51.cc/*",
                "https://tieba.baidu.com/*",
                "https://*.zhihu.com/*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_idle"
        }
    ]
}